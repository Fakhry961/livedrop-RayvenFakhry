# Example environment variables for the LiveDrop API (apps/api)
# Copy to .env and update values for your environment before starting the server.

# Server port
PORT=3001

# Comma-separated list of allowed CORS origins (frontend dev servers, Storybook)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:6006

# MongoDB connection string (MongoDB Atlas)
MONGODB_URI=MONGODB_URI=REPLACE_WITH_YOUR_MONGODB_URI

# Node environment
NODE_ENV=development

# JWT secret for signing tokens (change in production)
# This value was generated securely; rotate in production and do NOT commit real secrets.
JWT_SECRET=REPLACE_WITH_A_SECRET

# Optional: enable verbose logging
LOG_LEVEL=info
